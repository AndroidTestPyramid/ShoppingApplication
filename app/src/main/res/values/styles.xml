<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/light_yellow</item>
        <item name="colorAccent">@color/material_blue_grey_800</item>
    </style>
    <style name="Theme.MyAppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/ActionBarTabStyle.MyAppTheme</item>
    </style>

    <style name="ActionBarTabStyle.MyAppTheme" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/black</item>
        <item name="background">@color/light_yellow</item>
        <item name="colorAccent">@color/material_blue_grey_800</item>
        <item name="android:displayOptions">useLogo|showHome|showTitle|homeAsUp</item>
    </style>
</resources>